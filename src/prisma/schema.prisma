// datamodel source: Postgresを使用
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Next.jsのServer Componentなどで使用するPrisma Clientを生成
generator client {
  provider = "prisma-client-js"
}

// データベースに作成したいテーブルのモデルを定義
model Todo {
  id    Int     @id @default(autoincrement())
  title String
}